{
  "appId": "org.tagspaces.desktopapp",
  "asar": true,
  "asarUnpack": [
    "**\\*.{node,dll}",
    "**/node_modules/sharp/**/*",
    "**/node_modules/@img/**/*"
  ],
  "files": ["dist/", "node_modules/", "package.json", ".env", "extconfig.js"],
  "fileAssociations": [
    {
      "ext": ["md", "mdown", "html", "txt"],
      "name": "TagSpaces Editor",
      "role": "Editor"
    }
  ],
  "copyright": "Copyright Â© 2025 TagSpaces GmbH",
  "artifactName": "${name}-${os}-${arch}-${version}.${ext}",
  "win": {
    "target": ["nsis", "zip"],
    "icon": "assets/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "include": "resources/installer.nsh",
    "license": null
  },
  "mac": {
    "target": ["pkg", "dmg"],
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "assets/entitlements.mac.plist",
    "entitlementsInherit": "assets/entitlements.mac.plist",
    "icon": "assets/icon.icns"
  },
  "dmg": {
    "sign": false
  },
  "pkg": {
    "license": "assets/license_en.txt"
  },
  "linux": {
    "target": ["deb", "tar.gz", "appImage"],
    "category": "Office",
    "icon": "assets/icon.icns"
  },
  "appImage": {
    "license": "assets/license_en.txt"
  },

  "directories": {
    "app": "release/app",
    "buildResources": "assets",
    "output": "../builds"
  },
  "extraResources": ["./assets/**"]
}
