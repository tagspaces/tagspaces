{
  "compilerOptions": {
    "incremental": true,
    "target": "es2022",
    "ignoreDeprecations": "5.0",
    "module": "CommonJS",
    "lib": ["dom", "dom.iterable", "es2022"],
    "jsx": "react-jsx",
    //"strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": ".erb/dll",

    "noUnusedLocals": false,
    "pretty": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "paths": {
      "-/*": ["src/renderer/*"],
      "assets/*": ["assets/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"]
  },
  "include": [
    "src/main/**/*.ts",
    "src/renderer/**/*.ts",
    "src/renderer/**/*.tsx",
    "src/renderer/types",
    "tagspacespro/**/*.ts",
    "tagspacespro/**/*.tsx"
  ],
  "exclude": ["test", "release/build", "release/app/dist", ".erb/dll"]
}
